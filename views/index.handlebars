{{> archivum}}
<div class="container">
{{#each posts}}
<div class="container border w-50 shadow-lg p-3 mb-3 bg-white rounded">

    <div class="row pl-3 pr-3">
 <a href="/posts/{{id}}"><div><b>{{title}}</b> by:{{author}}</div></a><div class="d-flex ml-auto">{{created_at}}</div>
    </div>
    
</div>
{{/each}}
</div>

{{#if noPosts}}
<div class="container">
<div class="container border w-50 shadow-lg p-3 bg-white rounded ">

    <div class="pl-3 pr-3 text-center">
        <h3 class="mb-0">{{noPosts.title}}</h3>
    </div>
    
</div>
</div>
{{/if}}