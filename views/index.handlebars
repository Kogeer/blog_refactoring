{{#each posts}}
<div class="container border w-50 shadow-lg p-3 mb-3 bg-white rounded">

    <div class="row border-bottom pl-3 pr-3">
        <div>Author: {{author}}</div>
        <div class="d-flex ml-auto">2020/04/16 17:14</div>
    </div>

    <div class="row border-bottom justify-content-center mb-2">
        <h3 class="mb-2 mt-2">{{title}}</h3>
    </div>

    <div class="pt-2 pl-3 pr-3">
        {{content}}
    </div>

</div>
{{/each}}